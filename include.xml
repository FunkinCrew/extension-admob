<?xml version="1.0" encoding="UTF-8"?>
<extension
	xmlns="http://lime.openfl.org/project/1.0.4"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://lime.openfl.org/project/1.0.4 http://lime.openfl.org/xsd/project-1.0.4.xsd">

	<section if="android">
		<config:android extension="org.haxe.extension.Admob" />

		<config:android gradle-maven-repositories="https://artifact.bytedance.com/repository/pangle" />

		<dependency name="extension-admob" path="project/admob-android" />
	</section>

	<section if="ios">
		<config:ios linker-flags="-ObjC" />

		<section>
			<section unless="simulator">
				<dependency path="project/admob-ios/frameworks/arm64/GoogleMobileAds.framework" />
				<dependency path="project/admob-ios/frameworks/arm64/UserMessagingPlatform.framework" />
				<dependency path="project/admob-ios/frameworks/arm64/UnityAds.framework" />
				<dependency path="project/admob-ios/frameworks/arm64/UnityAdapter.framework" />
				<dependency path="project/admob-ios/frameworks/arm64/PAGAdSDK.framework" />
				<dependency path="project/admob-ios/frameworks/arm64/PangleAdapter.framework" />
			</section>

			<section if="simulator">
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/GoogleMobileAds.framework" />
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/UserMessagingPlatform.framework" />
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/UnityAds.framework" />
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/UnityAdapter.framework" />
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/PAGAdSDK.framework" />
				<dependency path="project/admob-ios/frameworks/arm64_x86_64-simulator/PangleAdapter.framework" />
			</section>

			<dependency path="project/admob-ios/bundles/PAGAdSDK.bundle" />

			<dependency name="Accelerate.framework" />
			<dependency name="AdSupport.framework" />
			<dependency name="AppTrackingTransparency.framework" />
			<dependency name="CoreMedia.framework" />
			<dependency name="CoreTelephony.framework" />
			<dependency name="JavaScriptCore.framework" />
			<dependency name="MobileCoreServices.framework" />
			<dependency name="Security.framework" />
			<dependency name="StoreKit.framework" />
			<dependency name="SystemConfiguration.framework" />
			<dependency name="WebKit.framework" />

			<dependency name="libbz2.tbd" />
			<dependency name="libc++.tbd" />
			<dependency name="libc++abi.tbd" />
			<dependency name="libiconv.tbd" />
			<dependency name="libresolv.9.tbd" />
			<dependency name="libsqlite3.tbd" />
			<dependency name="libxml2.tbd" />
			<dependency name="libz.tbd" />
		</section>

		<template path="templates" />
	</section>
</extension>